<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".App">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
            android:background="@drawable/applogo" />


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:layout_marginRight="10dp"
        app:columnCount="3"
        app:rowCount="3">

        <ImageView
            android:id="@+id/image00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="0"

            />


        <ImageView
            android:id="@+id/image01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            app:layout_column="1"
            app:layout_row="0"
            />

        <ImageView
            android:id="@+id/image02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            app:layout_column="2"
            app:layout_row="0"
            />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"

            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            app:layout_column="1"
            app:layout_row="1"
            />

        <ImageView
            android:id="@+id/image12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="5dp"
            app:layout_column="2"
            app:layout_row="1"
           />

        <ImageView
            android:id="@+id/image20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="0"
            app:layout_row="2"
          />

        <ImageView
            android:id="@+id/image21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_row="2"
           />

        <ImageView
            android:id="@+id/image22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"

            app:layout_column="2"
            app:layout_row="2"/>
            <!--app:srcCompat="@drawable/mole4"-->

    </androidx.gridlayout.widget.GridLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/pointsLabel"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"

            android:text="Points:  " />

        <TextView
            android:id="@+id/pointsLabeValue"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="255dp"
            android:gravity="left"
            android:text="0" />

        <TextView
            android:id="@+id/missesLabel"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="220dp"
            android:gravity="left"
            android:text="Misses:" />

        <TextView
            android:id="@+id/missesText"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="170dp"
            android:gravity="left"
            android:text="0" />

        <TextView
            android:id="@+id/timeLeftLael"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginRight="20dp"
            android:text="Time left:" />

        <TextView
            android:id="@+id/timeLeftText"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:text="30" />



    </RelativeLayout>

</LinearLayout>


