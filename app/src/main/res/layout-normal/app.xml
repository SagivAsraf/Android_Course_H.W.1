        <ImageView
            android:id="@+id/plus1image02"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="2"
            app:layout_row="0"

            />

        <ImageView
            android:id="@+id/minus3image02"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="2"
            app:layout_row="0"

            />


        <ImageView
            android:id="@+id/image10"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_column="0"
            app:layout_row="1" />


        <ImageView
            android:id="@+id/plus1image10"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="0"
            app:layout_row="1"

            />

        <ImageView
            android:id="@+id/minus3image10"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="0"
            app:layout_row="1"

            />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/plus1image11"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="1"
            app:layout_row="1"

            />

        <ImageView
            android:id="@+id/minus3image11"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="1"
            app:layout_row="1"

            />

        <ImageView
            android:id="@+id/image12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/plus1image12"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="2"
            app:layout_row="1"

            />

        <ImageView
            android:id="@+id/minus3image12"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="2"
