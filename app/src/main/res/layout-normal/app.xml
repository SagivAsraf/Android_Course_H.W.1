            app:layout_row="2"

            />

        <!--app:srcCompat="@drawable/mole4"-->

    </androidx.gridlayout.widget.GridLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/pointsLabel"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="      Points:"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pointsLabeValue"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/pointsLabel"
            android:text="0"
            android:gravity="left"

            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeLeftLael"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/pointsLabeValue"
            android:gravity="center_horizontal"
            android:text="Time left:"

            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeLeftText"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/timeLeftLael"
            android:gravity="left"
            android:text="30"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>
