            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/plus1image20"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="0"
            app:layout_row="2"

            />

        <ImageView
            android:id="@+id/minus3image20"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="0"
            app:layout_row="2"

            />


        <ImageView
            android:id="@+id/image21"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/plus1image21"
            android:layout_width="40dp"
