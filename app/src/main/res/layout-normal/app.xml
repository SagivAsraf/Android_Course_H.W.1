            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_column="0"
            app:layout_row="0"

            />

        <ImageView
            android:id="@+id/plus1image00"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="0"
            app:layout_row="0"

            />

        <ImageView
            android:id="@+id/minus3image00"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="0"
            app:layout_row="0"

            />


        <ImageView
            android:id="@+id/image01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/plus1image01"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_column="1"
            app:layout_row="0"

            />

        <ImageView
            android:id="@+id/minus3image01"
            android:layout_width="40dp"
